[req]
default_bits = 2048
prompt = no
default_md = sha256
x509_extensions = v3_req
distinguished_name = dn

[dn]
C = RU
ST = Moscow
L = Moscow
O = HomeLab
OU = Development
CN = myhomeserver
emailAddress = admin@myhomeserver

[v3_req]
subjectAltName = @alt_names

[alt_names]
DNS.1 = myhomeserver
DNS.2 = 127.0.0.1
DNS.3 = 192.168.1.*
IP.1 = 127.0.0.1
IP.2 = 192.168.1.10